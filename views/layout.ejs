<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "exclude.gg" %></title>

  <!-- Global CSS -->
  <link rel="stylesheet" href="/css/variables.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/topbar.css" />
  <link rel="stylesheet" href="/css/cart.css" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oxanium:wght@500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Page-specific CSS (optional) -->
  <% (css || []).forEach(href => { %>
    <link rel="stylesheet" href="<%= href %>" />
  <% }) %>
</head>

<body>
  <!-- Skyline background MUST be inside body -->
  <div class="bg-skyline" aria-hidden="true">
    <div class="skyline-layer skyline-back"></div>
    <div class="skyline-layer skyline-front"></div>
    <div class="skyline-haze"></div>
  </div>

  <%- include("partials/topbar") %>
  <%- include("partials/cartpanel") %>

  <main class="page">
    <%- include(page) %>
  </main>

  <%- include("partials/footer") %>

  <!-- Page-specific JS (optional) -->
  <% (scripts || []).forEach(src => { %>
    <script src="<%= src %>"></script>
  <% }) %>
</body>
</html>