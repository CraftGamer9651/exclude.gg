<section class="hero play">
  <div class="container hero-inner">
    <h1 class="hero-logo" aria-label="exclude.gg">
      <span class="logo-text">exclude</span><span class="logo-dot">.</span><span class="logo-tld">gg</span>
    </h1>

    <p class="hero-sub">
      A clean marketplace for game items — fast delivery, legit sellers, real support.
    </p>

    <a class="btn btn-primary" href="/shop">
      Shop now <span class="arrow">→</span>
    </a>

    <div class="hero-divider" aria-hidden="true"></div>
  </div>
</section>

<section class="section" id="featured">
  <div class="container">
    <h2 class="section-title">Featured</h2>

    <div class="featured-grid">
      <% (featured || []).forEach(item => { %>
        <a class="card" href="/item/<%= item.slug %>">
          <div class="card-top"><%= item.name %></div>
          <div class="card-bottom">
            <span class="muted"><%= item.game %></span>
            <span>$<%= Number(item.price).toFixed(2) %></span>
          </div>
        </a>
      <% }) %>
    </div>

    <div class="featured-cta">
      <a class="btn" href="/shop">Browse all <span class="arrow">→</span></a>
    </div>
  </div>
</section>

<section class="section section-why" id="why">
  <div class="container">
    <h2 class="section-title">Why choose us?</h2>

    <div class="why-grid">
      <div class="why">
        <div class="why-title">Fast delivery</div>
        <div class="why-text">Simple checkout and quick fulfillment.</div>
      </div>
      <div class="why">
        <div class="why-title">Trusted sellers</div>
        <div class="why-text">Built for reputation and transparency.</div>
      </div>
      <div class="why">
        <div class="why-title">Real support</div>
        <div class="why-text">We actually respond and fix problems.</div>
      </div>
    </div>
  </div>
</section>